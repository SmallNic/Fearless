<body id="welcome-body">
  <%= render "shared/header" %>

  <div class="row" id="dashboard">

    <!--               My Journey                      -->
    <%= render "shared/my_journey_sidebar" %>

    <div  class="column column-6">
      <h2>Set a New Goal</h2>

      <%= form_for [current_user, @journey, @goal], url: {action: "create"} do |f| %>
      <p>
        <%= f.label :details, "What is the smallest step you can take towards conquering your fear?"%><br>
        <%= f.text_field :details, :size=>"52x6" %>
      </p>

      <p>
        <%= f.label :deadline, "How many days do you want to give yourselve to reach this goal?"%><br>
        <%= f.collection_select :deadline, @timeFrames, :to_i, :to_s, :size=>"52" %>
      </p>

      <%= f.hidden_field :isAchieved, {value:false} %>

      <p>
        <%= f.submit value: "Submit"%>
      </p>

      <% end %>
    </div>

    <!--                Recent Posts                    -->
    <%= render "shared/recent_posts_sidebar" %>
  </div>
