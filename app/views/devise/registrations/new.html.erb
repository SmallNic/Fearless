<body class="login-signup-body">

  <div id="signup">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :alias %><br />
        <%= f.text_field :alias, autofocus: true, class:"text-box" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"text-box" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"text-box" %>
        <% if @validatable %>
        <em><br>(<%= @minimum_password_length %> characters min)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"text-box" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"text-box" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
